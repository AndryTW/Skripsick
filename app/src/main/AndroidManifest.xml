<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andry007.pelanggaransiswa">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_apps"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".variasi.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Login.Login_Wali"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login.Login_Orangtua"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Menu_Wali"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Detail_Siswa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Edit_Detil_Siswa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Tambah_Poin_Pelanggaran"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Data_Pelanggaran"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Pemberitahuan_Orangtua"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity android:name=".InputKategori"></activity>
        <activity android:name=".CekNIS"></activity>
        <service
            android:name=".firebase.FirebaseInstanceID">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>