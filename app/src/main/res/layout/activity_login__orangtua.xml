<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.Login_Orangtua">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+62"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/phone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/phone" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/no_id"
            android:hint="Nomor Telepon"
            android:inputType="phone" />

    </LinearLayout>

    <Button
        android:id="@+id/kirim_kode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim Kode"

        />

    <EditText
        android:id="@+id/kode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="6 Digit Kode Vertifikasi"
        android:inputType="number"
        android:maxLength="6"
        />


        <Button
            android:id="@+id/verifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verifikasi" />




</LinearLayout>